.mobile-menu
	background-color white
	color black
	width 200px
	padding 20px
	position fixed
	left 0
	top 0
	min-height 100%
	overflow auto
	transition transform 0.3s
	transform translateX(-100%)
	&.active
		transform translateX(0)
	+above(880px)
		display none
	a, span
		font-weight 700
		text-transform uppercase
		text-decoration none
		display block
		margin 10px 0
		font-size 1.3rem
		&:first-child
			margin-top 0
	span
		color white

.btn
	transition all 0.3s
	width: 100%
	display: block
	padding: 0
	background-color: white
	color #29356c
	height: 35px
	line-height: 36px
	border none
	text-transform: uppercase
	&:hover
		background-color: #2273b2
		color white
.field
	height: 35px
	display: block
	width: 100%
	padding-left: 15px
	padding-right: 15px
	background-color rgba(255, 255, 255, 0.15)
	border: 1px solid white
	color white
	margin 16px 0
	&::placeholder
		color white
	&-text
		resize none
		height: 100px
		padding-top: 10px
	&:focus
		background-color rgba(255, 255, 255, 0.25)
		outline none

.fadeInUp
	animation fadeInUp

.animated
	animation-fill-mode both

