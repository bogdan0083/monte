html
	box-sizing border-box
	font-size: 16px
	height: 100%
*, *:before, *:after
	box-sizing inherit


//generateClasses($spritesheet_sprites)

body
	font-size 1rem
	font-family 'Arno Pro', sans-serif
	font-weight 400
	height: 100%
	color #010101

a
	text-decoration underline
	color inherit
	transition all 0.3s
	&:hover
		text-decoration none

.icon
	display inline-block
	vertical-align middle
	position relative
	background-color: transparent
	padding: 0
	border none
	&:before
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display block
		opacity: 0
		transition all 0.3s
	&:after
		content ''
		top 0
		left 0
		position: absolute
		opacity: 1
		transition all 0.3s
	+ span
		display inline-block
		vertical-align middle

img
	max-width 100%

.nav-trigger-wrap
	width: 30px
	height: 30px
	background-color: #f6f6f6
	border-radius 50%
	text-align: center
	float: left
	margin-right: -30px
	margin-top: 3px

.nav-trigger
	margin: 0 auto
	hamburger-generator(18px, 1px, 5px)
	text-align center
	margin-top 15px
	position relative
	z-index 10
	&.active
		hamburger-animation()
	+above(880px)
		display none

.page-wrapper
	transition all 0.3s
	min-width: 1000px
	position: relative
	overflow: hidden
	&.active
		transform translateX(200px)

.layout
	height: 100%
	&-aside
		position: fixed
		top 0
		left: 0
		height: 100%
		width: 415px
		z-index: 11
		overflow: hidden
		.inner
			height: 100%
			min-height: 100%
			width: 435px
			padding-right: 20px
			overflow hidden
			position: relative
			&-body
				position: relative
				min-height: 100%
				padding-bottom: 100px
				transition transform 0.2s ease
				padding-top: 30px
.container
	padding 0 10px
	+above($screen-sm)
		padding: 0 15px

