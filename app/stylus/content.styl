// MAIN-NAV
.main-nav
	svg
		stroke #aaa
	> ul
		padding: 0
		margin: 0
		list-style none
		padding-left: 20px
		> li
			width: 370px
		> li > a, > li > span
			position: relative
			padding-left: 50px
			display: block
			text-transform: uppercase
			font-size 1.83rem
			text-decoration: none
			padding-top: 10px
			padding-bottom: 10px
			border-bottom 1px solid #e3e3e3
			border-top 1px solid #e3e3e3
			margin-top: -1px
			line-height: 1
			transition all 0.3s
			span
				display: inline-block
				margin-top: 8px
			> svg
				stroke #aaa
				position: absolute
				left: 0
				top: 50%
				transform translate(0, -50%)
				transition all 0.3s
		> li > a:hover,
		> li > span
			color #29356c
			border-bottom-color #29356c
			z-index: 1
			svg
				stroke #29356c
	.submenu
		padding 10px 10px 10px 70px
		list-style none
		display: none
		&.visible
			display: block
		a, span
			text-decoration: none
			color #010101
			font-size: 1.125rem
			text-transform: uppercase
			padding-left: 16px
			padding-top: 5px
			padding-bottom: 5px
			display: block
			position: relative
			transition all 0.3s
			svg
				position: absolute
				left: 0
				top 50%
				margin-top: -6px
				transition all 0.3s
		a:hover, span
			color #29356c
			border-bottom-color #29356c
			z-index: 1
			svg
				transform translateX(-3px)
				stroke #29356c

.layout-center
	padding-left: 415px
	height: 100%
	position: relative
	z-index: 10

.promo
	height: 100%
	background-image linear-gradient(to top, #9dc7e8 0%, #9dc7e8 22%, #83b6de 54%, #015ea6 88%, #0c6eb9 100%)
	position: relative
	overflow: hidden
	.logo
		position: absolute
		margin auto
		top: 0
		bottom: 0
		left: 0
		right: 0
		max-width: 80%
		max-height 80%
		animation-duration 2s
		animation-timing-function ease-out
	.foreground
		background: url(../images/foreground.png) no-repeat center top / cover
		position: absolute
		left: 0
		bottom -670px
		transform translateY(-50vh)
		z-index: 10
		width: 100%
		height: 798px

.cloud1, .cloud2
	position: absolute
	width: 515px
	height: 344px
	background: url("../images/cloud1.png") no-repeat center / 100% 100%
	left: -140px
	top -160px

.cloud1
	animation-duration 2s
	animation-delay 0.2s

.cloud2
	animation-duration 2s
	animation-delay 0.5s
	left: auto
	top 100px
	right -150px

// INNER CONTENT

.inner-content
	min-height: 100%
	background url("../images/foreground.png") no-repeat bottom -345px center, linear-gradient(to top, #9dc7e8 0%, #9dc7e8 22%, #83b6de 54%, #015ea6 88%, #0c6eb9 100%)
	padding-top 1px
	position: relative
	color white
	.container
		max-width: 60%
		margin: 0 auto
		width: 100%
		min-width: 644px

button:focus {
	outline none
}

.main-heading
	text-align: center
	font-size 2.25rem
	text-transform: uppercase
	height: 100px
	line-height: 110px
	position: relative
	span
		display: block
		position: relative
		z-index: 1
		animation-delay 0.6s
	&:before
		content ''
		width: 99px
		height: 98px
		background: url("../images/logo-transparent.png") no-repeat center
		animation fadeInDown 1s
		position: absolute
		top 0
		left: 50%
		margin-left -50px

h1, h2, h3, h4, h5
	font-weight: 400

.hotel-links
	text-align: center
	width: 430px
	margin: 20px auto
	animation-delay 1s

.hotel-link
	font-size 0.75rem
	text-transform: uppercase
	width: 33.3333%
	display: inline-block
	vertical-align: top
	margin-right: -3px
	text-decoration: none
	position: relative
	transition all 0.3s
	opacity: 0.4
	padding-top: 20px
	&:before
		content ''
		width: 8px
		height: 8px
		background-color: #fff
		position: absolute
		border-radius 50%
		top 0
		left 50%
		margin-left: -4px
	&:after
		content ''
		width: 90%
		right 55%
		height: 1px
		background-color: #fff
		position: absolute
		top 4px
		transition all 0.3s
	&:first-child:after
		display: none
	&:hover
		opacity: 1
	&:hover:after
		opacity: 0.4
	&.active
		opacity: 1

// HOTEL DESCRIPTION

.inner-text
	animatiotion-delay 1s
	text-align justify
	margin-top: 40px
	line-height: 1.6
	h3:first-child
		text-align: center
		margin-top: 0
		margin-bottom: -10px
		text-transform: uppercase

.hotel-data
	width: 100%
	clearfix()
	ul
		width: 33.3333%
		padding: 0
		margin: 0
		list-style none
		float: left
		li
			line-height: 1.5
		li:first-child
			text-transform: uppercase
	th
		font-weight: 400
		text-transform: uppercase


.promo, .inner-content
	min-height: 100vh

.hotel-content
	padding-bottom: 180px
.hotel-slider
	position: fixed
	bottom 0
	left: 0
	width: 100%
	padding-left: 415px
	.arrow
		position: absolute
		left: 15px
		width: 12px
		height: 22px
		background: transparent url(../images/arr-left.png) no-repeat center
		padding: 0
		top 50%
		margin-top: -11px
		border none
		&-right
			left: auto
			right 10px
			background-image: url(../images/arr-right.png)
	.inner
		position: relative
	a
		display: block
		height: 150px
		position: relative
		&:hover:before
			opacity: 0
		&:before
			content ''
			left: 0
			top: 0
			width: 100%
			height: 100%
			background black
			opacity: 0.4
			position: absolute
			transition all 0.3s
	img
		width: 100%

.destination-map
	position: absolute
	left: 0
	bottom: 0
	padding-left: 415px
	width: 100%

.destination-content, .company-details-content
	padding-bottom: 360px
	background-position: bottom -200px center

#map
	height: 320px
	background-color: gray
	width: 100%

.destinations
	clearfix()

a.destinations-item
	width: 33.3333%
	height: 0
	padding-bottom 21%
	overflow: hidden
	background-color: gray
	border 1px solid white
	margin-right: -1px
	margin-bottom: -1px
	display: block
	float: left
	position: relative
	color white
	text-transform: uppercase
	font-size: 1.2rem
	+above(1200px)
		font-size: 1.5rem
	&.js-full
		width: 100%
	&.js-half
		width: 50%
	&:hover span
		transform translate(-50%, -100%)
		opacity: 0
	&:hover:before
		opacity: 0
	&:before
		content ''
		width: 100%
		height: 100%
		top 0
		left: 0
		background-color: black
		opacity: 0.4
		transition all 0.3s
		position: absolute
	span
		position: absolute
		margin: auto
		top 50%
		left: 50%
		transform translate(-50%, -50%)
		transition all 0.3s

div.destinations-item
	background-color: #005699
	color white
	width: 33.3333%
	height: 0
	padding-bottom 21%
	overflow: hidden
	border 1px solid white
	margin-right: -1px
	margin-bottom: -1px
	display: block
	float: left
	position: relative
	&:before
		display: none
	h1
		position: absolute
		margin: auto
		top: 0
		bottom: 0
		left: 0
		right: 0
		font-size: 1.2rem
		+above(1200px)
			font-size: 2.25rem
	span
		position: relative
		top: 0
		left: 0
		transform none
		&:hover
			transform none

// COMPANY DETAILS CONTENT

.company-details
	animation-duration 2.5s
	clearfix()
	&-info
		line-height: 1.6

.feedback-form
	float: right
	width: 315px

